<configuration description="Config for Cronet-unittests">
    <!-- Use root for adb. -->
    <target_preparer class="com.android.tradefed.targetprep.RootTargetPreparer"/>
    <!-- This is necessary for the APK to read/write to any file on disk. -->
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="setenforce 0" />
        <option name="teardown-command" value="setenforce 1" />
        <option name="throw-if-cmd-fail" value="true" />
    </target_preparer>
    <!-- This creates the file which gtest redirects its JSON output to -->
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="touch /data/local/tmp/cronet_test_results_output.json"/>
        <option name="teardown-command" value="rm /data/local/tmp/cronet_test_results_output.json"/>
        <option name="throw-if-cmd-fail" value="true"/>
    </target_preparer>
    <!-- This creates the file which gtest redirects its stdout output to -->
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="touch /data/local/tmp/cronet_gtest_output.txt"/>
        <option name="teardown-command" value="rm /data/local/tmp/cronet_gtest_output.txt"/>
        <option name="throw-if-cmd-fail" value="true"/>
    </target_preparer>
    <!-- Uploading the APK to device and installing it -->
    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true"/>
        <option name="test-file-name" value="cronet_net_tester_app.apk"/>
    </target_preparer>
    <!-- Push the testing data to the specified directory before running tests -->
    <target_preparer class="com.android.tradefed.targetprep.PushFilePreparer">
        <option name="push-file" key="data" value="/data/local/tmp/net/data/" />
        <option name="push-file" key="nist-pkits" value="/data/local/tmp/net/third_party/nist-pkits/" />
        <option name="push-file" key="testdir" value="/data/local/tmp/net/third_party/quiche/src/quiche/common/platform/api/testdir/" />
        <option name="cleanup" value="false" />
    </target_preparer>
    <!-- Runs the test -->
    <test class="com.android.tradefed.testtype.HostTest">
        <option name="jar" value="net_unittests_tester.jar"/>
        <option name="set-option" value="library-to-load:net_unittests__library"/>
        <option name="set-option" value="dump-native-coverage:true"/>
    </test>
</configuration>